{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/config.schema.json",
  "productName": "ForgeCut",
  "version": "0.1.0",
  "identifier": "com.forgecut.app",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn --cwd ../ui dev",
    "beforeBuildCommand": "yarn --cwd ../ui build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ForgeCut",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
